<Window x:Class="GKOHarkka.Aloitus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aloitus" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Label Content="Pelaaja 1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Pelaaja 2" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top"/>
        <TextBox Name="pelaaja1Nimi" HorizontalAlignment="Left" Height="23" Margin="100,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="pelaaja2Nimi" HorizontalAlignment="Left" Height="23" Margin="100,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Name="jatkaNappula" Content="Jatka" HorizontalAlignment="Center" VerticalAlignment="Top" Width="75" Click="jatkaNappula_Click" Margin="0,210,0,0"/>
        <TextBlock Margin="10,90,179,0" TextWrapping="Wrap" Text="Pelimuoto:" VerticalAlignment="Top" FontSize="16"/>
        <RadioButton Name="breakthrough" IsChecked="True" GroupName="peli" Content="Breakthrough" HorizontalAlignment="Left" Margin="100,130,0,0" VerticalAlignment="Top"/>
        <RadioButton Name="tammi" GroupName="peli" Content="Tammi" HorizontalAlignment="Left" Margin="100,150,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
